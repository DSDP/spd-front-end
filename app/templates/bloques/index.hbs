{{document-title title=controller.breadCrumb}}

<h1>Bloques list</h1>

<p>
  {{link-to "New Bloque" "bloques.new" }}
</p>

{{input type="text" value=nombre}}
{{input type="text" value=tipo_camara}}
<button {{action "refresh"}}> Buscar </button>

{{#if controller.length}}
  {{page-numbers content=content totalPages=pages}}
  {{list-filter list=content partial='bloques/list-item' properties='nombre tipocamara' perPage=controller.perPage}}
  {{page-numbers content=content totalPages=pages}}
{{else}}
  <p id="blankslate">
    No Bloques found
  </p>
{{/if}}
