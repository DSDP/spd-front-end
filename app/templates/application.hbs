<header>
	<div class="logo">
		
	</div>

	<nav class="main-nav-wrap">
		<ul class="main-nav">
			{{#if session.isAuthenticated}}
			  <li><a {{ action 'invalidateSession' }}> <i class="fa fa-fw fa-lg fa-sign-out"></i> Logout</a></li>
			{{else}}
			  <li>{{#link-to 'login'}} <i class="fa fa-fw fa-lg fa-sign-in"></i> Login{{/link-to}}</li>
			{{/if}}
		</ul> <!-- main-nav -->
	</nav><!-- main-nav-wrap -->
</header>

<div class="menu-wrap">
	{{outlet nav}}
</div><!-- main-nav-wrap -->

<div class="content-bar">
	{{bread-crumbs}}
	
	<ul class="action-bar">
		<p>
			<i class="fa fa-plus"></i>
			Nuevo bloque
		</p>
	</ul>
</div>

<div class="content-wrap">
	<div class="content">
		{{outlet main}}
	</div>
</div>